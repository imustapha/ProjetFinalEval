@model IEnumerable<ProjetFinalEval.freelance>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutStablePage1.cshtml";
}

<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="~/Home/Accueil">Acceuil</a>
            <i class="fa fa-angle-right"></i>
            <a href="~/Freelance/Index">Liste des Employer Freelance</a>
            <i class="fa fa-angle-right"></i>

        </li>

    </ul>

</div>
<div class="col-md-12">
    <!-- BEGIN EXAMPLE TABLE PORTLET-->
    <div class="portlet box blue-madison">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-globe"></i>List des collaborateur Titulaire
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>

                <a href="javascript:;" class="reload">
                </a>
                <a href="javascript:;" class="remove">
                </a>
            </div>
        </div>
        <div class="portlet-body">
            <div class="table-toolbar">
                <div class="row">
                    <div class="col-md-6">


                        <div class="clearfix">
                            <a href="@Url.Action("Create")" id="sample_editable_1_new" class="btn green">Creer <i class="fa fa-plus"></i></a>
                        </div>


                    </div>

                </div>
            </div>
            <table class="table table-striped table-bordered table-hover" id="sample_2">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            Nom
                        </th>
                        <th>
                            PRENOM
                        </th>
                        <th>
                            EMAIL
                        </th>
                        <th>
                            TELEPHONE
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td></td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NOMFL)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PRENOMFL)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EMAILFL)
                            </td>
                            <td>
                                @{var tel = "(+212) " + item.TELEPHONE;}
                                @Html.DisplayFor(modelItem => tel)
                            </td>
                            <td>
                                <div class=" clearfix">
                                    <center>
                                        <a href="@Url.Action("Edit", new { id = item.IDFREELANCE })" id="sample_editable_1_new" class="btn green"> <i class="glyphicon glyphicon-pencil"></i></a>
                                        <a href="@Url.Action("Details", new { id = item.IDFREELANCE })" id="sample_editable_1_new" class="btn yellow"> <i class="glyphicon glyphicon-list-alt"></i></a>
                                        <a href="@Url.Action("Delete", new { id = item.IDFREELANCE })" id="sample_editable_1_new" class="btn red"> <i class="glyphicon glyphicon-trash"></i></a>
                                    </center>
                                </div>

                            </td>
                        </tr>

                    }

                </tbody>
            </table>
        </div>
    </div>
    <!-- END EXAMPLE TABLE PORTLET-->
</div>



